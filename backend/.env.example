# ===========================================
# Backend Environment Variables
# ===========================================
# 이 파일을 복사하여 .env 파일을 생성하세요
# cp .env.example .env

# -------------------------------------------
# Server Configuration
# -------------------------------------------
SERVER_PORT=8080

# -------------------------------------------
# Database Configuration
# -------------------------------------------
# [Option 1] Docker Compose (개발 환경)
# docker-compose up -d db 로 로컬 PostgreSQL 실행 시 사용
DB_HOST=localhost
DB_PORT=5432
DB_NAME=crypto_market_insight
DB_USERNAME=postgres
DB_PASSWORD=postgres

# [Option 2] Supabase (배포 환경)
# Supabase 프로젝트 생성 후 Connection String 정보 입력
# DB_HOST=db.xxxxxxxxxxxx.supabase.co
# DB_PORT=5432
# DB_NAME=postgres
# DB_USERNAME=postgres
# DB_PASSWORD=your-supabase-password

# 전체 JDBC URL (위 개별 설정 대신 사용 가능)
# DATABASE_URL=jdbc:postgresql://localhost:5432/crypto_market_insight

# -------------------------------------------
# JPA / Hibernate Configuration
# -------------------------------------------
# create: 테이블 생성 (개발용)
# validate: 스키마 검증만 (운영용)
# update: 변경사항 반영 (개발용)
# none: DDL 자동 실행 안함
JPA_DDL_AUTO=create
JPA_SHOW_SQL=true

# -------------------------------------------
# External API Configuration
# -------------------------------------------
# CoinGecko API (무료 플랜은 API Key 불필요)
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3
COINGECKO_CONNECT_TIMEOUT=5000
COINGECKO_READ_TIMEOUT=10000

# GitHub OAuth2
# GitHub Developer Settings에서 OAuth App 생성 후 입력
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# OAuth2 리다이렉트 후 프론트엔드 URL
OAUTH2_REDIRECT_URI=http://localhost:5173/oauth2/callback

# -------------------------------------------
# JWT Configuration
# -------------------------------------------
# JWT 서명에 사용할 시크릿 키 (최소 256bit 권장)
# 운영 환경에서는 반드시 강력한 랜덤 값으로 변경
JWT_SECRET=your-256-bit-secret-key-change-in-production
# 토큰 만료 시간 (기본 24시간)
JWT_EXPIRATION=86400000

# -------------------------------------------
# Cache Configuration (Caffeine)
# -------------------------------------------
# 캐시 만료 시간 (초)
CACHE_TTL_SECONDS=300
# 최대 캐시 항목 수
CACHE_MAX_SIZE=1000

# -------------------------------------------
# Logging Configuration
# -------------------------------------------
# 로그 레벨: TRACE, DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# -------------------------------------------
# CORS Configuration
# -------------------------------------------
# 허용할 프론트엔드 Origin (쉼표로 구분)
CORS_ALLOWED_ORIGINS=http://localhost:5173
